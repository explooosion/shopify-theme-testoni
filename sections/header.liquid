<script type="text/javascript">
 $(".menu-bar-tp").click(function(event){
    $('body').toggleClass("menu-open");
   	event.preventDefault();
  });
  
  $(".close-menu-here").click(function(){
	$('body').removeClass('menu-open');
  });
  
  $(".navigation-sidebar-overlay").click(function(){
	$('body').removeClass('menu-open');
  });
  
   $(".sub-menu-level-2 li").click(function(){
    $('.sub-menu-level-2 li').removeClass("activeAddingSub");
    $(this).addClass("activeAddingSub");
  });
  
  
  $( ".sub-menu-level-2 li" ).hover(
    function() {
      $( this ).addClass( "activeAddingSub" );
    }, function() {
      $( this ).removeClass( "activeAddingSub" );
    }
  );
  
  $(".inner-menu-tp").click(function(event){
    $('.inner-menu-tp').removeClass('menu-active'),$(this).addClass('menu-active'),$('.top-navigation #'+event.target.id).addClass('menu-active');
  	$('.navigation-dropdown .sub-menu-level-2').addClass('hide');
    $('.'+event.target.id).removeClass('hide');
   	event.preventDefault();
  });
  
</script>

