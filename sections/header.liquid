          </svg>
        </span>
      </a>

      {%- if shop.customer_accounts_enabled and section.settings.show_icons or use_sidebar_menu -%}
       {%- if customer -%}
        <a href="{{ routes.account_url }}" title="Account" class="Header__Icon Icon-Wrapper Icon-Wrapper--clickable hidden-phone">
          {%- render 'icon' with 'account' -%}
        </a>
      {%- else -%}
      <a href="{{ routes.account_login_url   }}?return_url=/" title="Account" class="Header__Icon Icon-Wrapper Icon-Wrapper--clickable hidden-phone">
          {%- render 'icon' with 'account' -%}
        </a>
      {%- endif -%}
      
      {%- endif -%}
      {% comment %}
